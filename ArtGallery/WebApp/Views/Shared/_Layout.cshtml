<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WebApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebApplication</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial"/>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    
                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdownAdmin" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Admin
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownAdmin">
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Artists" asp-action="Index">Artists</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="BasketItems" asp-action="Index">BasketItems</a>
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Baskets" asp-action="Index">Baskets</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Categories" asp-action="Index">Categories</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Comments" asp-action="Index">Comments</a>
                                <div class="dropdown-divider"></div>                            
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Invoices" asp-action="Index">Invoices</a>
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="InvoiceStatusCodes" asp-action="Index">InvoiceStatusCodes</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="OrderItems" asp-action="Index">OrderItems</a>  
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Orders" asp-action="Index">Orders</a>
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="OrderStatusCodes" asp-action="Index">OrderStatusCodes</a>
                                <div class="dropdown-divider"></div>                                                                                       
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="PaintingCategories" asp-action="Index">PaintingCategories</a>
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Paintings" asp-action="Index">Paintings</a>
                                <div class="dropdown-divider"></div>                             
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="PaymentMethods" asp-action="Index">PaymentMethods</a>
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Payments" asp-action="Index">Payments</a>
                                <div class="dropdown-divider"></div>                                
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="ShipmentItems" asp-action="Index">ShipmentItems</a>
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Shipments" asp-action="Index">Shipments</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="UserPaymentMethods" asp-action="Index">UserPaymentMethods</a>                                                       
                            </div>
                        </li>
                    } 
                    
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2020 - WebApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>
</html>